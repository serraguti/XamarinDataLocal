<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinDataLocal.Views.PeliculasView"
             xmlns:viewmodels="clr-namespace:XamarinDataLocal.ViewModels"
             xmlns:templates="clr-namespace:XamarinDataLocal.Templates">
    <ContentPage.BindingContext>
        <viewmodels:PeliculasViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Peliculas" FontSize="45" TextColor="Red"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <ListView ItemsSource="{Binding Peliculas}"
                      x:Name="listviewPeliculas">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <templates:TemplatePeliculasSimple/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>